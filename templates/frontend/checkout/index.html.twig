                                        </a>
                                        <button class="btn" type="submit"
                                           {#onclick="function submitAddress() {#}
                                               {#$('#address_form').submit();}#}
                                            {#submitAddress()"#}
                                        >
                                            ORDER
                                        </button>
                                    </div>
                                </div>
                                {{ form_end(form) }}

