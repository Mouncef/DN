                                <div class="checkout-box">
                                    <div class="checkout-table-02">
                                        <table>
                                            <thead>
                                            <tr>
                                                <td colspan="2">Order Summary</td>
                                            </tr>
                                            </thead>
                                            <tbody>
                                            <tr>
                                                <td>SUBTOTAL:</td>
                                                <td>
                                                    {% for article in cart.articles %}
