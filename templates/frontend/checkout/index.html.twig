                                <ul class="nav nav-tabs checkout-tab">
                                    <li class="active" id="address">
                                        <a disabled>
                                            <div class="numeral-box">
                                                <span class="numeral">1</span>
                                                <span class="icon icon-check"></span>
                                            </div>
                                            <div class="title">
                                                Shipping
                                            </div>
                                        </a>
                                    </li>
                                    <li id="payment">
